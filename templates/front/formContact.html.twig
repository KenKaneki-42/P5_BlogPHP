<form action="send-email-contact" method="post" id="contact-form">
	<div class="form-group">
		<label for="lastname">Nom:</label>
		<input type="text" class="form-control" id="lastname" name="lastname" required>
	</div>
	<div class="form-group">
		<label for="firstname">Prénom:</label>
		<input type="text" class="form-control" id="firstname" name="firstname" required>
	</div>
	<div class="form-group">
		<label for="email">E-mail:</label>
		<input type="email" id="email" name="email" class="form-control" autocomplete="email">
	</div>
	<div class="form-group">
		<label for="message">Message:</label>
		<textarea class="form-control" id="message" name="message" rows="5" required></textarea>
	</div>
  <input type="checkbox" id="checkbox-legal-infos" name="checkbox-legal-infos" required>
  <label for="checkbox-legal-infos">J'acceptes <a href="/legal-infos" target="_blank">les mentions légales</a></label>
  </br>
  <div class="g-recaptcha mb-3" data-sitekey="6LfpGH0pAAAAAO0juInjR0aYIwgjJ8Wn4t1Cmixb"></div>
	<input type="text" name="honeypot" style="display: none;">
  <button type="submit" name="submitContactForm" value="submitContactForm" class="btn btn-primary">Envoyer</button>
</form>
